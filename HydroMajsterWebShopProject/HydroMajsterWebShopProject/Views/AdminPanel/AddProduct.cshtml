@model HydroMajsterWebShopProject.Views.ViewModels.ProductViewModel
@inject HydroMajsterWebShopProject.Models.Services.CategoriesIntoSelectListService service

<div style="margin-left: auto; margin-right: auto; display: block; width: 60%;">
    <h2 style="margin-left: auto; margin-right: auto; display: block; width:">Panel dodawania produktu</h2>
    <h3 style="text-align: justify">
        Tutaj możesz dodać produkt, który pojawi się na stronie głównej pod konkretną kategorią.
        Pamiętaj o wybraniu kategorii z listy rozwijalnej oraz dodaniu zdjęcia, które będzie reprezentowało produkt.
    </h3>
    <form method="post" enctype="multipart/form-data" asp-controller="AdminPanel" asp-action="AddProduct">
        <div class="form-group">
            <p style="font-size: 20px;">Zdjęcie produktu:</p>
            <input type="file" name="file" />
        </div>
        <div class="form-group">
            <p style="font-size: 20px;">Nazwa produktu:</p>
            <input asp-for="Name" />
        </div>
        <div class="form-group">
            <p style="font-size: 20px;">Opis produktu:</p>
            <textarea asp-for="Description" rows="10" wrap="soft"></textarea>
        </div>
        <div class="form-group">
            <p style="font-size: 20px;">Cena produktu:</p>
            <input asp-for="Price" />
        </div>
        <div class="form-group">
            <p style="font-size: 20px;">Kategoria produktu:</p>
            <select asp-for="CategoryId" asp-items="@service.getCategoriesSelectList()" ></select>
        </div>
        <div class="form-group">
            <div class="col-md-10" style="margin-left: auto; margin-right: auto; display: block; width: 60%;">
                <input type="submit" value="Dodaj produkt" style="margin-left: auto; margin-right: auto; display: block; width: 60%;"/>
            </div>
        </div>
    </form>
    </div>


