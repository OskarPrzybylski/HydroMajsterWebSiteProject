@model IEnumerable<Product>
@{ 
    ViewData["Title"] = "Panel usuwania produktów";
}


<h3 style="background-color: #58595B; color: white; text-align: center; padding-bottom: 2%; padding-top: 2%;">@ViewData["Title"]
    <br />
    Aby usunąć konkretny produkt wybierz go z listy a następnie naciśnij przycisk "Usuń produkt". Pamiętaj że usuwanie jest nieodwracalne!

    </h3>


@foreach (var product in Model)
{
    
<form method="post" enctype="multipart/form-data" asp-controller="AdminPanel" asp-action="DeleteProduct" style="padding-top: 2%;padding-bottom: 2%; margin: 3%;background-color: #58595B; margin-left: auto; margin-right: auto; display: block; width: 80%;">
    <h1 style="text-align: center; color: white;">@product.Name , kategoria: @product.CategoryId</h1>
    <img src="~/@product.PhotoUrl" style="width: 20%; margin-left: auto; margin-right: auto; display: block;"/>
    <div class="form-group">
        <div class="col-md-10" style="margin-left: auto; margin-right: auto; display: block;">
            <input name="productId" type="hidden" value="@product.Id" />
            <input type="submit" value="Usuń produkt" style="margin-left: auto; margin-right: auto; display: block;" />
        </div>
    </div>
</form>
}
