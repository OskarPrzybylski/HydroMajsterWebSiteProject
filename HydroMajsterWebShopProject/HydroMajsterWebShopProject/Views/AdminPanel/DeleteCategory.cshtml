@model IEnumerable<Category>
@{
    ViewData["Title"] = "Panel usuwania kategorii";
}

<h3 style="background-color: #58595B; color: white; text-align: center; padding-bottom: 2%; padding-top: 2%;">
    @ViewData["Title"]
    <br />
    Tutaj możesz usunąć kategorie które wcześniej dodałeś. Naciśnięcie przycisku usuń kategorię
    jest nieodwracalne!

</h3>
@foreach (var category in Model)
{

    <form method="post" enctype="multipart/form-data" asp-controller="AdminPanel" asp-action="DeleteProduct" style="padding-top: 2%;padding-bottom: 2%; margin: 3%;background-color: #58595B; margin-left: auto; margin-right: auto; display: block; width: 80%;">
        <h1 style="text-align: center; color: white;">@category.Name , numer kategorii: @category.Id</h1>
        <img src="~/@category.PhotoUrl" style="width: 20%; margin-left: auto; margin-right: auto; display: block;" />
        <div class="form-group">
            <div class="col-md-10" style="margin-left: auto; margin-right: auto; display: block;">
                <input name="productId" type="hidden" value="@category.Id" />
                <input type="submit" value="Usuń kategorię" style="margin-left: auto; margin-right: auto; display: block;" />
            </div>
        </div>
    </form>
}


