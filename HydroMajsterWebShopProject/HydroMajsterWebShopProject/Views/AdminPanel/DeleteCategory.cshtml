@model IEnumerable<Category>


<div style="margin-left: auto; margin-right: auto; display: block; width: 60%;">
    <h2 style="margin-left: auto; margin-right: auto; display: block; width:">Panel usuwania kategorii</h2>
    <h3 style="text-align: justify">
        Tutaj możesz usunąć kategorie które wcześniej dodałeś. Naciśnięcie przycisku usuń kategorię
        jest nieodwracalne!
    </h3>

    @foreach (var category in Model)
    {
        <h3>@category.Name</h3>
        <form method="post" enctype="multipart/form-data" asp-controller="AdminPanel" asp-action="DeleteCategory">
            <div class="form-group">
                <div class="col-md-10">
                    <input name="categoryId" type="hidden" value="@category.Id" />
                    <input type="submit" value="usun kategorie" />
                </div>
            </div>
        </form>

    }
    </div>


