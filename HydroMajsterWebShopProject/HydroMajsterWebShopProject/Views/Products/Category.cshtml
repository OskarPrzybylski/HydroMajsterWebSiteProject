@{
    ViewData["Title"] = "Hydro Majster";
}
@model HydroMajsterWebShopProject.Views.ViewModels.CategoriesProductsCurrentCategoryViewModel
<!-- Page Content -->
<div class="container" style="font-family:Oxygen">

    <div class="row">

        <div class="col-lg-3 my-3" style="background-color: #58595B;">
            <img src="~/images/logo2.png" alt="logo" style="padding-top: 15px; padding-left: 30px; padding-bottom: 15px; width: 90%;">
            <div class="list-group">
                <div class="list-group rounded-0" style="background-color:#3A3C40; font-size:22px; text-align:center; color:white; margin-top:15px; margin-bottom:15px;">Kategorie</div>
                @foreach (var item in Model.Categories)
                {
                    <img class="card-img-top rounded-0" src="~/@item.PhotoUrl" alt="400x300px">
                    <a asp-action="Category" asp-controller="Products" asp-route-categoryId="@item.Id" class="list-group-item" style="text-align:center; background-color: #3A3C40; color:white;">@item.Name</a>
                    <a style="padding-top:15px;"></a>
                }
            </div>
            <div class="list-group rounded-0" style="background-color:#3A3C40; font-size:22px; text-align:center; color:white; margin-top:15px; margin-bottom:15px;">Reklamy</div>
            <img class="card-img-top rounded-0" src="~/images/reklamka.png" alt="400x300px" style="margin-bottom:15px;">

        </div>
        <!-- /.col-lg-3 -->

        <div class="col-lg-9">


            <div id="carouselExampleIndicators" class="carousel slide my-3" data-ride="carousel">
                <o' class="carousel-indicators">
                    <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                    <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                    <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
                </o'>
                <div class="carousel-inner" role="listbox">
                    <div class="carousel-item active">
                        <img class="d-block img-fluid" src="~/images/3.png" alt="First slide">
                    </div>
                    <div class="carousel-item">
                        <img class="d-block img-fluid" src="~/images/3.png" alt="Second slide">
                    </div>
                    <div class="carousel-item">
                        <img class="d-block img-fluid" src="~/images/3.png" alt="Third slide">
                    </div>
                </div>
                <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>

            </div>

            <div style="background-color: #58595B; padding:15px; text-align:center; color:white;" class="my-3"> Poniżej znajdują się produkty należące do kategorii: @Model.Category.Name . Wybierz konkretny produkt aby zobaczyć jego szczegóły. Poprzez panel po lewej stronie możesz przełączać się pomiędzy różnymi kategoriami. Miłego przeglądania! </div>

            <div class="row" style="text-align:center;">

                @foreach (var item in Model.Products)
                {
                    <div class="col-lg-4 col-md-6 mb-3">
                        <div class="card rounded-0 border-0 h-100" style="background-color:#58595B; color:white;">
                            <a asp-action="Product" asp-controller="Products" asp-route-productId="@item.Id"><img class="card-img-top rounded-0" src="~/@item.PhotoUrl" alt=""></a>
                            <div class="card-body">
                                <h4 class="card-title">
                                    <a asp-action="Product" asp-controller="Products" asp-route-productId="@item.Id" style="color:white;">@item.Name</a>
                                </h4>

                                <p class="card-text">@item.Description</p>
                            </div>
                            <div class="card-footer rounded-0" style="background-color:#3A3C40;">
                                <h5>@item.Price zł</h5>
                            </div>
                        </div>
                    </div>
                }



            </div>
            <!-- /.row -->

        </div>
        <!-- /.col-lg-9 -->

    </div>
    <!-- /.row -->

</div>
<!-- /.container -->
<!-- Footer -->
